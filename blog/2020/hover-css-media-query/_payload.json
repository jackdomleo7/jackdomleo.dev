com/jackdomleo7",{"id":84,"key":85,"value":86},"46719126-f516-4853-9444-e40cd0576918","CodePen","https://codepen.io/jackdomleo7",{"id":88,"key":89,"value":90},"c1581e8d-c729-4232-8944-0f767d94177d","LinkedIn","https://linkedin.com/in/jackdomleo7",{"data":92,"content":93,"nodeType":117},{},[94,103,110],{"data":95,"content":96,"nodeType":102},{},[97],{"data":98,"marks":99,"value":100,"nodeType":101},{},[],"©2018-2025","text","paragraph",{"data":104,"content":105,"nodeType":102},{},[106],{"data":107,"marks":108,"value":109,"nodeType":101},{},[],"All rights reserved.",{"data":111,"content":112,"nodeType":102},{},[113],{"data":114,"marks":115,"value":116,"nodeType":101},{},[],"Jack Domleo","document",{"sys":119,"total":21,"skip":38,"limit":21,"items":120,"includes":464},{"type":37},[121],{"metadata":122,"sys":125,"fields":138},{"tags":123,"concepts":124},[],[],{"space":126,"id":128,"type":48,"createdAt":129,"updatedAt":130,"environment":131,"publishedVersion":133,"revision":134,"contentType":135,"locale":22},{"sys":127},{"type":10,"linkType":11,"id":12},"5GKjEQKbXAneX7HsUv1qtm","2023-01-22T21:55:27.965Z","2023-01-24T08:10:50.331Z",{"sys":132},{"id":18,"type":10,"linkType":19},110,13,{"sys":136},{"type":10,"linkType":57,"id":137},"article",{"title":139,"slug":140,"image":141,"description":162,"publishDate":163,"tags":164,"body":166},"@media (hover: hover) - CSS Media Query","hover-css-media-query",{"metadata":142,"sys":145,"fields":153},{"tags":143,"concepts":144},[],[],{"space":146,"id":148,"type":14,"createdAt":149,"updatedAt":149,"environment":150,"publishedVersion":152,"revision":21,"locale":22},{"sys":147},{"type":10,"linkType":11,"id":12},"1BWwf3Fg2A0y1RhcY7oNqq","2023-01-22T21:55:22.730Z",{"sys":151},{"id":18,"type":10,"linkType":19},5,{"title":154,"description":155,"file":156},"css=hover-media-query-og","CSS media query for hover",{"url":157,"details":158,"fileName":161,"contentType":34},"//images.ctfassets.net/l1wujzr3g1ab/1BWwf3Fg2A0y1RhcY7oNqq/0dadb7c242364de5ac4f5b63dd57f1b6/css_hover-media-query-og.png",{"size":159,"image":160},13019,{"width":31,"height":32},"css=hover-media-query-og.png","The hover CSS media feature can be used to test whether the user's primary input mechanism can hover over elements.","2020-07-06",[165],"CSS",{"nodeType":117,"data":167,"content":168},{},[169,200,227,243,250,258,266,273,280,291,298,314,325,332,339,362,373,388,395,435,439,446],{"nodeType":170,"data":171,"content":172},"blockquote",{},[173,180],{"nodeType":102,"data":174,"content":175},{},[176],{"nodeType":101,"value":177,"marks":178,"data":179},"The `hover` CSS media feature can be used to test whether the user's primary input mechanism can hover over elements.",[],{},{"nodeType":102,"data":181,"content":182},{},[183,187,196],{"nodeType":101,"value":184,"marks":185,"data":186},"- ",[],{},{"nodeType":188,"data":189,"content":191},"hyperlink",{"uri":190},"https://developer.mozilla.org/en-US/docs/Web/CSS/@media/hover",[192],{"nodeType":101,"value":193,"marks":194,"data":195},"MDN web docs",[],{},{"nodeType":101,"value":197,"marks":198,"data":199},"\r",[],{},{"nodeType":102,"data":201,"content":202},{},[203,207,213,217,223],{"nodeType":101,"value":204,"marks":205,"data":206},"Not to be confused with the ",[],{},{"nodeType":101,"value":208,"marks":209,"data":212},":hover",[210],{"type":211},"code",{},{"nodeType":101,"value":214,"marks":215,"data":216}," psuedo selector, this is a ",[],{},{"nodeType":101,"value":218,"marks":219,"data":222},"media query",[220],{"type":221},"bold",{},{"nodeType":101,"value":224,"marks":225,"data":226}," you may have never used or never considered using.\r",[],{},{"nodeType":102,"data":228,"content":229},{},[230,234,239],{"nodeType":101,"value":231,"marks":232,"data":233},"Let's look at an example and see how it could be improved using the ",[],{},{"nodeType":101,"value":235,"marks":236,"data":238},"hover",[237],{"type":211},{},{"nodeType":101,"value":240,"marks":241,"data":242}," media query.",[],{},{"nodeType":102,"data":244,"content":245},{},[246],{"nodeType":101,"value":247,"marks":248,"data":249},"Let's assume we're using this HTML for the below demonstration.\r",[],{},{"nodeType":102,"data":251,"content":252},{},[253],{"nodeType":101,"value":254,"marks":255,"data":257},"HTML\n\u003Cbutton class=\"button\">\n  Hover me\r\n  \u003Csvg>...\u003C/svg>\r\n\u003C/button>\r",[256],{"type":211},{},{"nodeType":259,"data":260,"content":261},"heading-2",{},[262],{"nodeType":101,"value":263,"marks":264,"data":265},"Showing an icon on hover\r",[],{},{"nodeType":102,"data":267,"content":268},{},[269],{"nodeType":101,"value":270,"marks":271,"data":272},"This is a typical feature request. It's not very detailed, but as front-end developers, it's enough for us to work with and create a prototype button at the least.\r",[],{},{"nodeType":102,"data":274,"content":275},{},[276],{"nodeType":101,"value":277,"marks":278,"data":279},"For this to work, we may jump to do something like this:\r",[],{},{"nodeType":102,"data":281,"content":282},{},[283,288],{"nodeType":101,"value":284,"marks":285,"data":287},"CSS\n.button {\r\n  background: darkorange;\r\n  color: white;\r\n  border: none;\r\n  padding: 1rem;\r\n  text-align: center;\r\n  position: relative;\r\n  cursor: pointer;\r\n}\n\r\n.button svg {\r\n  height: 2rem;\r\n  width: 2rem;\r\n  position: absolute;\r\n  top: 50%;\r\n  right: 0.6rem;\r\n  fill: currentColor;\r\n  opacity: 0;\r\n}\n\r\n.button:hover {\r\n  padding-right: 3rem;\r\n}\n\r\n.button:hover svg {\r\n  opacity: 1;\r\n}",[286],{"type":211},{},{"nodeType":101,"value":197,"marks":289,"data":290},[],{},{"nodeType":102,"data":292,"content":293},{},[294],{"nodeType":101,"value":295,"marks":296,"data":297},"This would for sure show the icon when the button is hovered! 💪 But it doesn't work on my mobile... It doesn't know I'm hovering the button.\r",[],{},{"nodeType":102,"data":299,"content":300},{},[301,305,310],{"nodeType":101,"value":302,"marks":303,"data":304},"So, how do we cater for touchscreen devices that can't hover? A common solution would be to always display the icon on _mobile devices (take note of this, I will come back to it later)_ and add the hovering functionality for larger screens by using a ",[],{},{"nodeType":101,"value":306,"marks":307,"data":309},"min-width",[308],{"type":211},{},{"nodeType":101,"value":311,"marks":312,"data":313}," media query, typically these are screens that are 768px or wider:\r",[],{},{"nodeType":102,"data":315,"content":316},{},[317,322],{"nodeType":101,"value":318,"marks":319,"data":321},"CSS\n.button {\r\n  background: darkorange;\r\n  color: white;\r\n  border: none;\r\n  padding: 1rem;\r\n  padding-right: 3rem;\r\n  text-align: center;\r\n  position: relative;\r\n}\n\r\n.button svg {\r\n  height: 2rem;\r\n  width: 2rem;\r\n  position: absolute;\r\n  top: 50%;\r\n  right: 0.6rem;\r\n  fill: currentColor;\r\n  opacity: 1;\r\n}\n\r\n@media (min-width: 768px) {\r\n  .button {\r\n    padding-right: 1rem;\r\n    cursor: pointer;\r\n  }\n\r\n  .button svg {\r\n    opacity: 0;\r\n  }\n\r\n  .button:hover {\r\n    padding-right: 3rem;\r\n  }\n\r\n  .button:hover svg {\r\n    opacity: 1;\r\n  }\r\n}",[320],{"type":211},{},{"nodeType":101,"value":197,"marks":323,"data":324},[],{},{"nodeType":102,"data":326,"content":327},{},[328],{"nodeType":101,"value":329,"marks":330,"data":331},"Great! We now have a button that always shows the icon on devices with a screen width less than 768px and will initially hide the icon on devices with a screen width of 768px wide or wider.\r",[],{},{"nodeType":102,"data":333,"content":334},{},[335],{"nodeType":101,"value":336,"marks":337,"data":338},"Chances are, this works for most cases and has been an acceptable solution for many years. However, we can't assume a device doesn't have a hover input mechanism just because of its screen width, and vice-versa.\r",[],{},{"nodeType":102,"data":340,"content":341},{},[342,346,350,354,358],{"nodeType":101,"value":343,"marks":344,"data":345},"This is where our `hover` media query comes in. Let's take a look at how we can refactor our ",[],{},{"nodeType":101,"value":306,"marks":347,"data":349},[348],{"type":211},{},{"nodeType":101,"value":351,"marks":352,"data":353}," to use ",[],{},{"nodeType":101,"value":235,"marks":355,"data":357},[356],{"type":211},{},{"nodeType":101,"value":359,"marks":360,"data":361}," instead.",[],{},{"nodeType":102,"data":363,"content":364},{},[365,370],{"nodeType":101,"value":366,"marks":367,"data":369},"CSS\n.button {\r\n  background: darkorange;\r\n  color: white;\r\n  border: none;\r\n  padding: 1rem;\r\n  padding-right: 3rem;\r\n  text-align: center;\r\n  position: relative;\r\n}\n\r\n.button svg {\r\n  height: 2rem;\r\n  width: 2rem;\r\n  position: absolute;\r\n  top: 50%;\r\n  right: 0.6rem;\r\n  fill: currentColor;\r\n  opacity: 1;\r\n}\n\r\n@media (hover: hover) {\r\n  .button {\r\n    padding-right: 1rem;\r\n    cursor: pointer;\r\n  }\n\r\n  .button svg {\r\n    opacity: 0;\r\n  }\n\r\n  .button:hover {\r\n    padding-right: 3rem;\r\n  }\n\r\n  .button:hover svg {\r\n    opacity: 1;\r\n  }\r\n}",[368],{"type":211},{},{"nodeType":101,"value":197,"marks":371,"data":372},[],{},{"nodeType":102,"data":374,"content":375},{},[376,380,384],{"nodeType":101,"value":377,"marks":378,"data":379},"Outside any media query, we define our base styles that apply to everything. Inside our ",[],{},{"nodeType":101,"value":235,"marks":381,"data":383},[382],{"type":211},{},{"nodeType":101,"value":385,"marks":386,"data":387}," media query, we define styles specific to devices with a hover input mechanism.\r",[],{},{"nodeType":102,"data":389,"content":390},{},[391],{"nodeType":101,"value":392,"marks":393,"data":394},"Can you see how this is better than determining hover-specific styles based on screen size?\r",[],{},{"nodeType":102,"data":396,"content":397},{},[398,402,406,410,415,419,423,427,431],{"nodeType":101,"value":399,"marks":400,"data":401},"It's also a cleaner method because we define our ",[],{},{"nodeType":101,"value":235,"marks":403,"data":405},[404],{"type":221},{},{"nodeType":101,"value":407,"marks":408,"data":409}," styles in our ",[],{},{"nodeType":101,"value":235,"marks":411,"data":414},[412,413],{"type":221},{"type":211},{},{"nodeType":101,"value":416,"marks":417,"data":418}," media query, it's grouped them nicely for us. These ",[],{},{"nodeType":101,"value":235,"marks":420,"data":422},[421],{"type":211},{},{"nodeType":101,"value":424,"marks":425,"data":426}," styles would be harder to identify in the stylesheet if they were encapsulated in a ",[],{},{"nodeType":101,"value":306,"marks":428,"data":430},[429],{"type":211},{},{"nodeType":101,"value":432,"marks":433,"data":434}," media query.\r",[],{},{"nodeType":436,"data":437,"content":438},"hr",{},[],{"nodeType":102,"data":440,"content":441},{},[442],{"nodeType":101,"value":443,"marks":444,"data":445},"For a working example, I created a CodePen below (with a few extra CSS properties) that I hope will help 🙂.",[],{},{"nodeType":102,"data":447,"content":448},{},[449,453,461],{"nodeType":101,"value":450,"marks":451,"data":452},"\r\n",[],{},{"nodeType":188,"data":454,"content":456},{"uri":455},"https://codepen.io/jackdomleo7/embed/jOWZRXX",[457],{"nodeType":101,"value":458,"marks":459,"data":460},"CodePen: hover: hover media query",[],{},{"nodeType":101,"value":197,"marks":462,"data":463},[],{},{"Asset":465},[141],{"sys":467,"total":21,"skip":38,"limit":21,"items":468},{"type":37},[469],{"fields":470,"sys":481},{"articleDisclaimer":471},{"data":472,"content":473,"nodeType":117},{},[474],{"data":475,"content":476,"nodeType":102},{},[477],{"data":478,"marks":479,"value":480,"nodeType":101},{},[],"Disclaimer: All data and information are correct to the best of my knowledge at the time of writing.",{"id":482,"type":48},"3Viop9UQLlIrWglTQjk5Bd",{"sys":484,"total":152,"skip":38,"limit":485,"items":486,"includes":614},{"type":37},1000,[487,520,553,584],{"fields":488,"sys":518},{"title"