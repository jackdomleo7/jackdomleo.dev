603,"image":604},6959,{"width":30,"height":31},"neumorphic-design-og.png",[607,85],"Design","2020-05-27","learning-neumorphic-design",{"id":611,"type":47},"2KWdODn6oaRYNzG4Qz4yd3",{"Asset":613},[614,522,489,555,586],{"metadata":615,"sys":618,"fields":623},{"tags":616,"concepts":617},[],[],{"space":619,"id":68,"type":13,"createdAt":69,"updatedAt":69,"environment":621,"publishedVersion":72,"revision":20,"locale":21},{"sys":620},{"type":9,"linkType":10,"id":11},{"sys":622},{"id":17,"type":9,"linkType":18},{"title":74,"description":75,"file":624},{"url":77,"details":625,"fileName":81,"contentType":33},{"size":79,"image":626},{"width":30,"height":31},1730768677372]