\n",[168,318,320],{"class":170,"line":319},10,[168,321,218],{"emptyLinePlaceholder":217},[168,323,325],{"class":170,"line":324},11,[168,326,327],{"class":257},"  // Controlled mutation method for state protection\n",[168,329,331,334,337,340,343,346,349,351,354,356,359,362,364,367],{"class":170,"line":330},12,[168,332,333],{"class":174},"  function",[168,335,336],{"class":178}," scorePoints(type",[168,338,339],{"class":174},":",[168,341,342],{"class":185}," 'try'",[168,344,345],{"class":174},"|",[168,347,348],{"class":185},"'penalty'",[168,350,345],{"class":174},[168,352,353],{"class":185},"'conversion'",[168,355,345],{"class":174},[168,357,358],{"class":185},"'drop goal'",[168,360,361],{"class":178},")",[168,363,339],{"class":174},[168,365,366],{"class":230}," void",[168,368,251],{"class":178},[168,370,372,375],{"class":170,"line":371},13,[168,373,374],{"class":174},"    switch",[168,376,377],{"class":178}," (type) {\n",[168,379,381,384,386],{"class":170,"line":380},14,[168,382,383],{"class":174},"      case",[168,385,342],{"class":185},[168,387,388],{"class":178},":\n",[168,390,392,395,398,401,404],{"class":170,"line":391},15,[168,393,394],{"class":230},"        _score",[168,396,397],{"class":178},".value ",[168,399,400],{"class":174},"+=",[168,402,403],{"class":281}," 5",[168,405,189],{"class":178},[168,407,409,412],{"class":170,"line":408},16,[168,410,411],{"class":174},"        break",[168,413,189],{"class":178},[168,415,417,419,422],{"class":170,"line":416},17,[168,418,383],{"class":174},[168,420,421],{"class":185}," 'penalty'",[168,423,388],{"class":178},[168,425,427,429,432],{"class":170,"line":426},18,[168,428,383],{"class":174},[168,430,431],{"class":185}," 'drop goal'",[168,433,388],{"class":178},[168,435,437,439,441,443,446],{"class":170,"line":436},19,[168,438,394],{"class":230},[168,440,397],{"class":178},[168,442,400],{"class":174},[168,444,445],{"class":281}," 3",[168,447,189],{"class":178},[168,449,451,453],{"class":170,"line":450},20,[168,452,411],{"class":174},[168,454,189],{"class":178},[168,456,458,460,463],{"class":170,"line":457},21,[168,459,383],{"class":174},[168,461,462],{"class":185}," 'conversion'",[168,464,388],{"class":178},[168,466,468,470,472,474,477],{"class":170,"line":467},22,[168,469,394],{"class":230},[168,471,397],{"class":178},[168,473,400],{"class":174},[168,475,476],{"class":281}," 2",[168,478,189],{"class":178},[168,480,482,484],{"class":170,"line":481},23,[168,483,411],{"class":174},[168,485,189],{"class":178},[168,487,488],{"class":170,"line":5},[168,489,490],{"class":178},"    }\n",[168,492,494],{"class":170,"line":493},25,[168,495,496],{"class":178},"  }\n",[168,498,500],{"class":170,"line":499},26,[168,501,218],{"emptyLinePlaceholder":217},[168,503,505,508,511,513],{"class":170,"line":504},27,[168,506,507],{"class":174},"  return",[168,509,510],{"class":178}," { score",[168,512,201],{"class":200},[168,514,515],{"class":178}," scorePoints };\n",[168,517,519],{"class":170,"line":518},28,[168,520,521],{"class":178},"})\n",[28,523,524,525,528,529,532,533,535,536,538,539],{},"In the example above, ",[68,526,527],{},"_score"," (prefixed with an underscore following the JavaScript convention for private properties) can be read via the ",[68,530,531],{},"score"," computed property, but cannot be mutated directly. Since ",[68,534,531],{}," is a computed property, Vue does not allow its value to be changed. If you try editing the value of ",[68,537,531],{},", you will get the following TypeScript error: ",[68,540,541],{},"\"Cannot assign to \"score\" because it is a read-only property.\"",[28,543,544,547,548,550],{},[63,545,546],{},"Important caveat:"," The private ",[68,549,527],{}," state will never appear in Pinia's global state or in the Vue DevTools Pinia panel—only the exposed computed property will be visible.",[55,552,554],{"id":553},"alternative-methods-for-pinia-readonly-state","Alternative Methods for Pinia Readonly State",[99,556,558],{"id":557},"using-vues-readonly-method","Using Vue's readonly() Method",[28,560,561,562,565,566,568],{},"Vue provides a ",[68,563,564],{},"readonly()"," method that can create ",[63,567,79],{}," in Pinia:",[159,570,572],{"className":161,"code":571,"language":163,"meta":164,"style":164},"import { defineStore } from 'pinia';\nimport { ref, readonly } from 'vue';\n\nexport const useExampleStore = defineStore('example', () => {\n  const _state = ref({ count: 0 });\n  const state = readonly(_state);\n\n  function increment() {\n    _state.value.count++;\n  }\n\n  return { state, increment };\n});\n",[68,573,574,586,603,607,631,651,663,667,674,693,697,701,713],{"__ignoreMap":164},[168,575,576,578,580,582,584],{"class":170,"line":171},[168,577,175],{"class":174},[168,579,179],{"class":178},[168,581,182],{"class":174},[168,583,186],{"class":185},[168,585,189],{"class":178},[168,587,588,590,592,594,597,599,601],{"class":170,"line":192},[168,589,175],{"class":174},[168,591,197],{"class":178},[168,593,201],{"class":200},[168,595,596],{"class":178}," readonly } ",[168,598,182],{"class":174},[168,600,209],{"class":185},[168,602,189],{"class":178},[168,604,605],{"class":170,"line":214},[168,606,218],{"emptyLinePlaceholder":217},[168,608,609,611,613,616,618,620,623,625,627,629],{"class":170,"line":221},[168,610,224],{"class":174},[168,612,227],{"class":174},[168,614,615],{"class":230}," useExampleStore",[168,617,234],{"class":174},[168,619,237],{"class":178},[168,621,622],{"class":185},"'example'",[168,624,201],{"class":200},[168,626,245],{"class":178},[168,628,248],{"class":174},[168,630,251],{"class":178},[168,632,633,635,638,640,643,645,648],{"class":170,"line":254},[168,634,264],{"class":174},[168,636,637],{"class":230}," _state",[168,639,234],{"class":174},[168,641,642],{"class":178}," ref({ count",[168,644,339],{"class":174},[168,646,647],{"class":281}," 0",[168,649,650],{"class":178}," });\n",[168,652,653,655,658,660],{"class":170,"line":261},[168,654,264],{"class":174},[168,656,657],{"class":230}," state",[168,659,23