{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^~/(.*)$": "<rootDir>/$1",
    "^vue$": "vue/dist/vue.common.js"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "vue",
    "json"
  ],
  "setupFiles": [
    "./tests/jest.setup.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },
  "snapshotSerializers": [
    "jest-serializer-vue"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/components/**/*.{js,ts,vue}",
    "<rootDir>/helpers/**/*.{js,ts,vue}",
    "<rootDir>/layouts/**/*.{js,ts,vue}",
    "<rootDir>/pages/**/*.{js,ts,vue}"
  ]
}